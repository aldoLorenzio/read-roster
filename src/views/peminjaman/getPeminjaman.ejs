<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Buku</title>
    <style>
              nav {
      display: flex; /* 1 */
      justify-content: space-between; /* 2 */
      padding: 1rem 2rem; /* 3 */
      background: cornflowerblue; /* 4 */
      color: white /* 4 */
    }

    nav ul {
    display: flex; /* 5 */
    list-style: none; /* 6 */
    }

    nav li {
    padding-left: 1rem; /* 7! */
    }
    nav a {
    text-decoration: none;
    color: white;
    }

    nav a:hover {
        text-decoration: underline;
    }

    .logout{
      background-color: black;
    }



    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 15px;
    }
    </style>
</head>
<body>
    <nav>
        <h2>Admin Dashboard</h2>
        <ul>
          <li><a href="/v1/buku">Buku</a></li>
          <li><a href="/v1/genre">Genre</a></li>
          <li><a href="/v1/peminjaman">Peminjaman</a></li>
        </ul>
        <button class="logout" type="button"><a href="/v1/auth/logout">Logout</a></button>
      </nav>

      <div style="padding: 14px">
        <table>
          <tr>
            <th>Nama</th>
            <th>title</th>
            <th>date_borrow</th>
            <th>date_due</th>
            <th>date_returned</th>
          </tr>
          <% peminjamans.forEach(function(e) { %>
            <tr>
              <td>
                <%= e.User.name %>
              </td>
              <td><%= e.Buku.title %></td>
              <td>
                <%= e.date_borrow %>
              </td>
              <td>
                <%= e.date_due %>
              </td>
              <td><%= e.date_returned %></td>
              <td>
                <button>edit</button>
                <button>delete</button>
              </td>
            </tr>
            <% }) %>
        </table>
      </div>
</body>
</html>